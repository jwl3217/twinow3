{
  "functions": [                       
    {
      "codebase": "default",           
      "source": "functions",
      "runtime": "nodejs20",
      "platform": "gcfv1"        
    }
  ],
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/webhook",
        "function": "webhook"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
